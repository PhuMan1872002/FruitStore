@{
    ViewBag.Title = "ListCarts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DepartMentStore.Models
@model List<Order>
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Fresh and Organic</p>
                    <h1>Order</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- cart -->
<div class="cart-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="cart-table-wrap">
                    <table class="cart-table">
                        <thead class="cart-table-head">
                            <tr class="table-head-row">
                                <th class="product-remove">Order Code</th>
                                <th class="product-image">Order Status</th>
                                <th class="product-name">Booking Date</th>
                                <th class="product-price">Delivery Date</th>
                                <th class="product-quantity">Total Price</th>
                                <th class="product-total">Coupon Code</th>
                                <th class="product-total">Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                             {
                             <tr class="table-body-row">
                                <td class="product-remove">@item.Order_id</td>
                                <td class="product-image">
                                    @if (item.DeliveryStatus == true)
                                    {
                                        <button class="btn edit-btn">Đã giao</button>
                                    }
                                    else
                                    {
                                        <button class="btn edit-btn">Chưa giao</button>
                                    }
                                </td>
                                <td class="product-name">@item.BookingDate</td>
                                <td class="product-price"> @item.DeliveryDate</td>
                                <td class="product-quantity">
                                    @String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.TotalPrice)
                                </td>
                                <td class="product-total"> @Html.DisplayFor(modelItem => item.Coupon.CouponCode)</td>
                                <td class="product-total"><a href="@Url.Action("OrderDetail",new { @id=@item.Order_id})">Watch</a> </td>
                             </tr>
                             }



                        </tbody>
                    </table>
                </div>
            </div>

            
        </div>
    </div>
</div>
<!-- end cart -->
