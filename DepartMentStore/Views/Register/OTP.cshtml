<h1 class="text-center text-danger">Email Verification</h1>

<form action="/Register/OTP" method="post">

    <div class="form-group">
        <label for="username">OTP</label>
        <input type="text" class="form-control" id="username" placeholder="OTP" name="OTP" required>

    </div>
    <div style="color:red;" class="form-group">
        
        @ViewBag.Message
    </div>

    <div>
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>

</form>


