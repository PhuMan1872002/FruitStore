
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <style>
        h1 {
            font-size: 32px; /* Kích thước chữ cho tiêu đề */
            font-weight: bold;
            text-align: center;
            color: #dc3545; /* Màu chữ đỏ */
            margin-top: 20px;
        }

        /* Form */
        form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa; /* Màu nền cho form */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Đổ bóng cho form */
            margin-bottom: 50px;
        }

        .form-floating {
            position: relative;
            margin-bottom: 50px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ced4da; /* Màu viền input */
            border-radius: 4px;
        }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #6c757d; /* Màu chữ label */
            font-size: 14px;
            pointer-events: none;
            transition: top 0.3s, font-size 0.3s;
        }

        .form-floating input:focus,
        .form-floating input:not(:placeholder-shown) {
            padding-top: 20px;
            padding-bottom: 10px;
        }

            .form-floating input:focus + label,
            .form-floating input:not(:placeholder-shown) + label {
                top: 0;
                font-size: 12px;
                color: #dc3545; /* Màu chữ label khi input được focus */
            }

        /* Nút Đăng nhập */
        input[type="submit"] {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #28a745; /* Màu nền cho nút Đăng nhập */
            color: #ffffff; /* Màu chữ cho nút Đăng nhập */
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #218838; /* Màu nền khi hover nút Đăng nhập */
            }

        .signup-link {
            color: #262626;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<!-- hero area -->
