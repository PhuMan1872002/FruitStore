    <script>
        let revenueChart;

        // Function to toggle visibility based on selected criteria
        function toggleInputFields() {
            let criteria = document.getElementById('criteriaInput').value;

            // Group of fields for each criteria
            let dayGroup = document.getElementById('dayGroup');
            let monthGroup = document.getElementById('monthGroup');
            let quarterGroup = document.getElementById('quarterGroup');
            let yearGroup = document.getElementById('yearGroup');

            // Hide all fields initially
            dayGroup.style.display = 'none';
            monthGroup.style.display = 'none';
            quarterGroup.style.display = 'none';
            yearGroup.style.display = 'none';

            // Show fields based on selected criteria
            switch (criteria) {
                case 'day':
                    dayGroup.style.display = 'inline-block';
                    monthGroup.style.display = 'inline-block';
                    yearGroup.style.display = 'inline-block';
                    break;
                case 'month':
                    monthGroup.style.display = 'inline-block';
                    yearGroup.style.display = 'inline-block';
                    break;
                case 'quarter':
                    quarterGroup.style.display = 'inline-block';
                    yearGroup.style.display = 'inline-block';
                    break;
                case 'year':
                    yearGroup.style.display = 'inline-block';
                    break;
            }
        }

        // Event listener for changing criteria
        document.getElementById('criteriaInput').addEventListener('change', toggleInputFields);

        // Event listener for submit button
        document.getElementById('submitBtn').addEventListener('click', function () {
            let criteria = document.getElementById('criteriaInput').value;
            let month = document.getElementById('monthInput').value;
            let year = document.getElementById('yearInput').value;
            let day = document.getElementById('dayInput').value;
            let quarter = document.getElementById('quarterInput').value;

            let data = {};

            switch (criteria) {
                case 'day':
                    data = { day: day, month: month, year: year };
                    break;
                case 'month':
                    data = { month: month, year: year };
                    break;
                case 'quarter':
                    data = { quarter: quarter, year: year };
                    break;
                case 'year':
                    data = { year: year };
                    break;
            }

            fetchDataAndDrawRevenueChart(data);
        });

        document.addEventListener('DOMContentLoaded', function () {
            let currentMonth = new Date().getMonth() + 1; // Current month
            let currentYear = new Date().getFullYear();   // Current year
            fetchDataAndDrawRevenueChart(currentMonth, currentYear); // Gọi hàm với tháng và năm hiện tại
        });

        toggleInputFields();

    // Function to fetch data and draw the chart
        function fetchDataAndDrawRevenueChart(data) {
            const url = `/Admin/SalesRevenue`;

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': '@Html.AntiForgeryToken()'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                let labels = data.map(item => item.ProductName);
                let revenues = data.map(item => item.Revenue);

                // Function to draw the chart
                drawRevenueChart(labels, revenues);
            })
            .catch(error => console.error('Error fetching the revenue data:', error));
        }


    function drawRevenueChart(labels, data) {
        const ctx = document.getElementById('revenueChart').getContext('2d');
        if (revenueChart) {
            revenueChart.destroy(); // Destroy the existing chart instance if it exists
        }
        revenueChart = new Chart(ctx, {
            type: 'bar', // Change to 'line', 'pie', etc. as needed
            data: {
                labels: labels,
                datasets: [{
                    label: 'Revenue',
                    data: data,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    </script>

    <script>
    let quantityChart;

    // Hàm gửi yêu cầu AJAX với các tham số được cung cấp
    function fetchDataAndDrawQuantityChart(data) {
        const url = '/Admin/SalesQuantity';

        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest',
                'X-CSRF-Token': '@Html.AntiForgeryToken()'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(data => {
            if (data && Array.isArray(data)) {
                const labels = data.map(item => item.Name);
                const quantities = data.map(item => item.Quantity);

                // Function to draw the sales quantity chart
                drawQuantityChart(labels, quantities);
            } else {
                console.error('Unexpected data format:', data);
            }
        })
        .catch(error => console.error('Error fetching the sales quantity data:', error));
    }

    // Gửi yêu cầu AJAX khi trang được tải
    document.addEventListener('DOMContentLoaded', function() {
        const currentMonth = new Date().getMonth() + 1; // Tháng hiện tại
        const currentYear = new Date().getFullYear(); // Năm hiện tại
        fetchDataAndDrawQuantityChart({ month: currentMonth, year: currentYear });
    });

    // Gửi yêu cầu AJAX khi nhấn nút submit
    document.getElementById('submitBtn').addEventListener('click', function () {
        const criteria = document.getElementById('criteriaInput').value;
        const month = document.getElementById('monthInput').value || null;
        const year = document.getElementById('yearInput').value || null;
        const day = document.getElementById('dayInput').value || null;
        const quarter = document.getElementById('quarterInput').value || null;

        let data = {};

        switch (criteria) {
            case 'day':
                data = { day: day, month: month, year: year };
                break;
            case 'month':
                data = { month: month, year: year };
                break;
            case 'quarter':
                data = { quarter: quarter, year: year };
                break;
            case 'year':
                data = { year: year };
                break;
            default:
                console.warn('Unknown criteria:', criteria);
                return; // Không gửi yêu cầu nếu tiêu chí không hợp lệ
        }

        fetchDataAndDrawQuantityChart(data);
    });

    function drawQuantityChart(labels, data) {
        const ctx = document.getElementById('quantityChart').getContext('2d');
        if (quantityChart) {
            quantityChart.destroy(); // Huỷ bỏ phiên bản chart hiện tại nếu có
        }
        quantityChart = new Chart(ctx, {
            type: 'bar', // Có thể thay đổi thành 'line', 'pie', v.v.
            data: {
                labels: labels,
                datasets: [{
                    label: 'Quantity',
                    data: data,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    </script>


