    <script type="text/javascript">
    $(document).ready(function() {
        // Hàm gửi yêu cầu AJAX với các tham số được cung cấp
        function sendAjaxRequest(month, year, day, quarter) {
            $.ajax({
                url: '@Url.Action("TableQuery", "Admin")',
                type: 'GET',
                data: { month: month, year: year, day: day, quarter: quarter },
                dataType: 'json',
                success: function(response) {
                    if (response.success === false) {
                        alert(response.message);
                        return;
                    }

                    var tableBody = $('#productTable tbody');
                    tableBody.empty();
                    $.each(response, function(index, product) {
                        var revenueVND = new Intl.NumberFormat('vi-VN', {
                            style: 'currency',
                            currency: 'VND'
                        }).format(product.Revenue);

                        var row = '<tr>' +
                            '<td>' + product.Name + '</td>' +
                            '<td>' + product.Quantity + '</td>' +
                            '<td>' + revenueVND + '</td>' +
                            '</tr>';
                        tableBody.append(row);
                    });
                },
                error: function(err) {
                    alert('Có lỗi xảy ra khi gửi yêu cầu AJAX.');
                    console.error(err);
                }
            });
        }

        // Hàm để ẩn/hiện các trường nhập liệu theo tiêu chí
        function updateInputVisibility() {
            var selectedCriteria = $('#criteriaSelect').val(); // Lấy tiêu chí hiện tại
            // Ẩn tất cả các input
            $('#dayInput, #monthInput, #yearInput, #quarterInput').parent().hide();

            // Hiện input phù hợp với tiêu chí đã chọn
            switch (selectedCriteria) {
                case 'day':
                    $('#dayInput, #monthInput, #yearInput').parent().show();
                    break;
                case 'month':
                    $('#monthInput, #yearInput').parent().show();
                    break;
                case 'quarter':
                    $('#quarterInput, #yearInput').parent().show();
                    break;
                case 'year':
                    $('#yearInput').parent().show();
                    break;
            }
        }

        // Gửi yêu cầu AJAX khi trang được tải
        var currentMonth = new Date().getMonth() + 1;
        var currentYear = new Date().getFullYear();
        sendAjaxRequest(currentMonth, currentYear, null, null); // Gửi yêu cầu mặc định

        // Gửi yêu cầu AJAX khi nhấn nút submit
        $('#submitBtn').click(function() {
            var month = $('#monthInput').val();
            var year = $('#yearInput').val();
            var day = $('#dayInput').val();
            var quarter = $('#quarterInput').val();

            // Gửi yêu cầu AJAX dựa trên tiêu chí được chọn
            sendAjaxRequest(month, year, day, quarter);
        });

        // Cập nhật ẩn/hiện input khi thay đổi tiêu chí
        $('#criteriaSelect').change(updateInputVisibility);

        // Khởi động lần đầu để cập nhật trạng thái input
        updateInputVisibility();
    });
    </script>


